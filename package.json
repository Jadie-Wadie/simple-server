{
	"name": "@jadiewadie/simple-server",
	"version": "2.2.0",
	"description": "A simple HTTP/S server, built using express",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"test": "jest --coverage",
		"test:watch": "jest --coverage --watchAll",
		"view:coverage": "live-server coverage/lcov-report",
		"prepare": "tsc",
		"clean": "rimraf coverage dist"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Jadie-Wadie/simple-server.git"
	},
	"keywords": [
		"express"
	],
	"author": "Jadie Wadie",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Jadie-Wadie/simple-server/issues"
	},
	"homepage": "https://github.com/Jadie-Wadie/simple-server#readme",
	"dependencies": {
		"express": "^4.17.1",
		"cors": "^2.8.5",
		"@types/cors": "^2.8.6",
		"@types/express": "^4.17.7",
		"@types/node": "^14.0.23"
	},
	"devDependencies": {
		"live-server": "^1.2.1",
		"nodemon": "^2.0.4",
		"rimraf": "^3.0.2",
		"@types/jest": "^26.0.4",
		"@types/node-fetch": "^2.5.7",
		"@types/source-map-support": "^0.5.2",
		"jest": "^26.1.0",
		"node-fetch": "^2.6.0",
		"source-map-support": "^0.5.19",
		"ts-jest": "^26.1.2",
		"typescript": "^3.9.7"
	},
	"jest": {
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"coverageThreshold": {
			"global": {
				"branches": 100,
				"functions": 100,
				"lines": 100,
				"statements": 100
			}
		},
		"coverageReporters": [
			"json",
			"lcov",
			"text",
			"clover"
		]
	}
}
