{
	"name": "@jadiewadie/simple-server",
	"version": "2.3.1",
	"description": "A simple HTTP/S server, built using express",
	"keywords": [
		"express"
	],
	"homepage": "https://github.com/Jadie-Wadie/simple-server#readme",
	"bugs": {
		"url": "https://github.com/Jadie-Wadie/simple-server/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Jadie-Wadie/simple-server.git"
	},
	"license": "MIT",
	"author": "Jadie Wadie",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"lint": "prettier -w ./**/*.* && sort-package-json",
		"prepare": "tsc",
		"rimraf": "rimraf coverage dist",
		"test": "jest",
		"test:watch": "concurrently -r \"jest --watchAll\" \"live-server coverage/lcov-report --quiet\""
	},
	"jest": {
		"collectCoverage": true,
		"coverageDirectory": "coverage",
		"coverageReporters": [
			"lcov",
			"text"
		],
		"coverageThreshold": {
			"global": {
				"branches": 80,
				"functions": 80,
				"lines": 80,
				"statements": 80
			}
		},
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		}
	},
	"dependencies": {
		"@types/cors": "^2.8.7",
		"@types/express": "^4.17.8",
		"@types/node": "^14.11.5",
		"cors": "^2.8.5",
		"express": "^4.17.1",
		"selfsigned": "^1.10.8"
	},
	"devDependencies": {
		"@types/jest": "^26.0.14",
		"@types/node-fetch": "^2.5.7",
		"@types/source-map-support": "^0.5.3",
		"concurrently": "^5.3.0",
		"jest": "^26.5.2",
		"live-server": "^1.2.1",
		"node-fetch": "^2.6.0",
		"nodemon": "^2.0.4",
		"prettier": "^2.1.2",
		"rimraf": "^3.0.2",
		"sort-package-json": "^1.46.0",
		"source-map-support": "^0.5.19",
		"ts-jest": "^26.4.1",
		"typescript": "^3.9.7"
	}
}
