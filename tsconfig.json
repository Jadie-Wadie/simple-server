{
	"compilerOptions": {
		"target": "es5",
		"rootDir": "src",
		"outDir": "dist",
		"module": "commonjs",
		"strict": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"lib": ["esnext"],
		"declaration": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
